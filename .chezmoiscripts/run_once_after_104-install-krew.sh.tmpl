#!/bin/zsh
set -eufo pipefail

echo -e "\0033[0;32m>>>>> Begin Setting Up Krew For Linux/Mac <<<<<\033[0m"

(
  set -x; cd "$(mktemp -d)" &&
  OS="$(uname | tr '[:upper:]' '[:lower:]')" &&
  ARCH="$(uname -m | sed -e 's/x86_64/amd64/' -e 's/\(arm\)\(64\)\?.*/\1\2/' -e 's/aarch64$/arm64/')" &&
  KREW="krew-${OS}_${ARCH}" &&
  curl -fsSLO "https://github.com/kubernetes-sigs/krew/releases/latest/download/${KREW}.tar.gz" &&
  tar zxvf "${KREW}.tar.gz" &&
  ./"${KREW}" install krew
)

# Go to HOME directory to pick up the proper kubectl version.
cd $HOME
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"
$HOME/.local/share/mise/installs/kubectl/latest/bin/kubectl krew install ctx
$HOME/.local/share/mise/installs/kubectl/latest/bin/kubectl krew install ns
# return to chezmoi sourceDir
cd {{ .chezmoi.sourceDir }}

echo -e "\0033[0;32m>>>>> Finish Setting Up Krew Shell <<<<<\033[0m"
